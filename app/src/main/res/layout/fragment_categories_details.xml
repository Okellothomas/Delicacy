<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Categories_details">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/colorPrimary">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:id="@+id/delicaciesImageView"
           android:src="@drawable/delicacies"
           android:scaleType="centerCrop"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:paddingTop="20dp"
           android:paddingBottom="20dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp">

           <TextView
               android:textSize="20sp"
               android:text="Category Name"
               android:id="@+id/delicaciesNameTextView"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:textColor="@color/colorPrimaryDark"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/delicaciesDescriptionTextView"
               android:text="Category description"
               android:layout_below="@+id/delicaciesNameTextView"
               android:textStyle="italic"
               android:textColor="@color/colorAccent"
               android:textSize="18sp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:text="Save"
               android:background="@drawable/button"
               android:textSize="20sp"
               android:textStyle="bold"
               android:textAlignment="center"
               android:fontFamily="sans-serif"
               android:textColor="@color/black"
               android:layout_width="120dp"
               android:layout_height="wrap_content"/>

           <TextView
               android:text="Delete"
               android:background="@drawable/button"
               android:textSize="20sp"
               android:textStyle="bold"
               android:textAlignment="center"
               android:fontFamily="sans-serif"
               android:textColor="@color/black"
               android:layout_alignParentEnd="true"
               android:layout_width="120dp"
               android:layout_height="wrap_content"/>

       </RelativeLayout>

   </LinearLayout>
    </ScrollView>

</FrameLayout>